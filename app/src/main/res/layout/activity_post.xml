<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.leonardo_1202154152_modul6.PostActivity">

    <ImageView
        android:id="@+id/img_post"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_launcher_foreground"
        />
    <Button
        android:id="@+id/btn_choose_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_post"
        android:text="choose image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/et_title_post"
        android:layout_below="@id/btn_choose_image"
        android:layout_width="match_parent"
        android:hint="Title"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/ed_post"
        android:hint="Write your post"
        android:layout_below="@id/et_title_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="31dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:onClick="add"
        android:src="@drawable/ic_create" />

</RelativeLayout>
